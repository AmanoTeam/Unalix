[
    {
        "args": [
            "-u",
            "--url"
        ],
        "options": {
            "help": "Specify one or more URLs to be processed.",
            "action": "append",
            "required": true
        }
    },
    {
        "args": [
            "--unshort"
        ],
        "options": {
            "help": "Unshort the given URL.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--parse-documents"
        ],
        "options": {
            "help": "Follow HTML/JavaScript redirects.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--enable-cookies"
        ],
        "options": {
            "help": "Handle cookies on HTTP requests.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--launch-in-browser"
        ],
        "options": {
            "help": "Launch cleaned/unshortened URL in default web browser.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--allow-referral"
        ],
        "options": {
            "help": "Avoid removing marketing fields from the given URL.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--ignore-rules"
        ],
        "options": {
            "help": "Do not parse rules.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--ignore-exceptions"
        ],
        "options": {
            "help": "Do not parse exceptions rules.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--ignore-raw"
        ],
        "options": {
            "help": "Do not parse raw rules.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--ignore-redirections"
        ],
        "options": {
            "help": "Do not parse redirection rules.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--skip-blocked"
        ],
        "options": {
            "help": "Ignore regex rules for blocked domains.",
            "action": "store_true"
        }
    },
    {
        "args": [
            "--skip-local"
        ],
        "options": {
            "help": "Skip URLs on local hosts (e.g 127.0.0.1, 0.0.0.0, localhost).",
            "action": "store_true"
        }
    }
]